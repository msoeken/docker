#!/usr/bin/make -f

BUILDDIR = build_dir

# secondly called by launchpad
build:
	mkdir $(BUILDDIR);
	cd $(BUILDDIR); cmake -G Ninja -Denable_cirkit-addon-reversible=ON -DPYBIND11_PYTHON_VERSION=2.7 -DBUILD_TESTING=OFF -Dcirkit_ENABLE_PYTHON_API=ON -DCMAKE_INSTALL_PREFIX=../debian/tmp/usr -DCMAKE_PYTHON_SITE_PATH=../debian/tmp/usr/lib/python2.7/dist-packages ..
	ninja -C $(BUILDDIR) cirkit cirkit_python revkit revkit_python

# thirdly called by launchpad
binary: binary-indep binary-arch

binary-indep:
	# nothing to be done

binary-arch:
	cd $(BUILDDIR); cmake -P cmake_install.cmake
	mkdir debian/tmp/DEBIAN
	dpkg-gencontrol -pcirkit
	dpkg --build debian/tmp ..

# firstly called by launchpad
clean:
	rm -f build
	rm -rf $(BUILDDIR)

.PHONY: binary binary-arch binary-indep clean
